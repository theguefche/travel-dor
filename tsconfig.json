{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      // "@/*": [
      //   "./src/*",
      // ],
      "@app-store": [
        "app/store.ts"
      ],
      "@features/*": [
        "features/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layout/*": [
        "layout/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@translation/*": [
        "translation/*"
      ],
      "@typing/*": [
        "typing/*"
      ],
      "@config/*": [
        "config/*"
      ]
      // "@styles/*": ["src/styles/*"],
      // "@static/*": ["src/static/*"]
    },
  },
  "include": [
    "src",
    "src/translation/@types",
    "src/custom.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}